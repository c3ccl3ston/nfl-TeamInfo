<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scheduleCard"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical"
    android:stateListAnimator="@anim/card_elevation"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weekNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/sansLight"
            android:text="Week 1"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/weekDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/sansLight"
            android:text="Sun, Sep 7"
            android:textColor="@color/gray"
            android:textSize="15dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:layout_weight="0"
        android:columnCount="7"
        android:rowCount="2">

        <TextView
            android:id="@+id/gameLocation"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_rowSpan="2"
            android:fontFamily="sans-serif-thin"
            android:text="at "
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/opponentLogo"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_rowSpan="2"
            android:src="@drawable/bal_logo" />

        <TextView
            android:id="@+id/opponentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_rowSpan="2"
            android:fontFamily="@string/sansLight"
            android:text="Ravens"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/outcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:layout_gravity="center_vertical|right"
            android:text="W"
            android:visibility="gone" />

        <TextView
            android:id="@+id/scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="center_vertical"
            android:layout_rowSpan="2"
            android:fontFamily="sans-serif-thin"
            android:gravity="right"
            android:text="35-42"
            android:textColor="@color/gray"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/gameTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_gravity="center_vertical|right"
            android:layout_rowSpan="2"
            android:fontFamily="sans-serif-thin"
            android:gravity="right"
            android:text="8:30"
            android:textColor="@color/gray"
            android:textSize="30dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_gravity="center_vertical"
            android:layout_rowSpan="2"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:fontFamily="sans-serif-thin"
                android:text="PM"
                android:textSize="11dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_marginTop="-5dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:fontFamily="sans-serif-thin"
                android:text="ET"
                android:textSize="14dp" />
        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center|center_horizontal">

        <TextView
            android:id="@+id/bye_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="BYE WEEK"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="gone" />
    </LinearLayout>

</android.support.v7.widget.CardView>